<?xml version="1.0"?>
<ruleset name="Rate Compare">
    <description>PHP CodeSniffer configuration for Rate Compare WordPress plugin</description>

    <!-- What to scan -->
    <file>.</file>

    <!-- Exclude vendor and test directories -->
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>tests/</exclude-pattern>
    <exclude-pattern>node_modules/</exclude-pattern>

    <!-- How to scan -->
    <arg name="colors"/>
    <arg name="parallel" value="50"/>
    <arg name="cache"/>

    <!-- Rules: Check PHP version compatibility -->
    <config name="testVersion" value="7.4-"/>

    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress"/>

    <!-- Use WordPress Extra rules -->
    <rule ref="WordPress-Extra"/>

    <!-- Use WordPress Docs rules -->
    <rule ref="WordPress-Docs"/>

    <!-- Use WordPress VIP rules (optional, can be strict) -->
    <rule ref="WordPress-VIP-Go"/>

    <!-- Exclude some rules that might be too strict for development -->
    <rule ref="WordPress.Security.NonceVerification">
        <severity>5</severity>
    </rule>

    <!-- Allow short array syntax -->
    <rule ref="Generic.Arrays.DisallowShortArraySyntax">
        <severity>0</severity>
    </rule>

    <!-- Allow short ternary -->
    <rule ref="WordPress.PHP.DisallowShortTernary">
        <severity>0</severity>
    </rule>
</ruleset>
