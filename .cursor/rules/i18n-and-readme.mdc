    if (context) {
        return wp.i18n.sprintf(
            wp.i18n.__('Context: %s', 'plugin-slug'),
            wp.i18n.__(key, 'plugin-slug')
        );
    }
    return wp.i18n.__(key, 'plugin-slug');
}
