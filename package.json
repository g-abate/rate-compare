{
  "name": "rate-compare-monorepo",
  "version": "1.0.0",
  "description": "Universal rate comparison system for short-term rentals (WordPress plugin + JavaScript snippet)",
  "private": true,
  "workspaces": [
    "wordpress-plugin",
    "universal-snippet",
    "shared"
  ],
  "scripts": {
    "test": "npm run test:shared && npm run test:universal-snippet && npm run test:wordpress",
    "test:shared": "cd shared && npm test",
    "test:universal-snippet": "cd universal-snippet && npm test",
    "test:wordpress": "cd wordpress-plugin && composer test",
    "build": "npm run build:shared && npm run build:universal-snippet",
    "build:shared": "cd shared && npm run build",
    "build:universal-snippet": "cd universal-snippet && npm run build",
    "lint": "npm run lint:shared && npm run lint:universal-snippet && npm run lint:wordpress",
    "lint:shared": "cd shared && npm run lint",
    "lint:universal-snippet": "cd universal-snippet && npm run lint",
    "lint:wordpress": "cd wordpress-plugin && composer cs",
    "lint:fix": "npm run lint:fix:shared && npm run lint:fix:universal-snippet && npm run lint:fix:wordpress",
    "lint:fix:shared": "cd shared && npm run lint:fix",
    "lint:fix:universal-snippet": "cd universal-snippet && npm run lint:fix",
    "lint:fix:wordpress": "cd wordpress-plugin && composer cs:fix",
    "dev": "npm run dev:shared && npm run dev:universal-snippet",
    "dev:shared": "cd shared && npm run dev",
    "dev:universal-snippet": "cd universal-snippet && npm run dev",
    "clean": "npm run clean:shared && npm run clean:universal-snippet",
    "clean:shared": "cd shared && npm run clean",
    "clean:universal-snippet": "cd universal-snippet && npm run clean",
    "install:all": "npm install && cd shared && npm install && cd ../universal-snippet && npm install && cd ../wordpress-plugin && composer install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "playwright": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "rate-comparison",
    "short-term-rental",
    "airbnb",
    "vrbo",
    "booking.com",
    "wordpress-plugin",
    "javascript-snippet",
    "monorepo"
  ],
  "author": "Gideon Abate",
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/g-abate/rate-compare.git"
  },
  "bugs": {
    "url": "https://github.com/g-abate/rate-compare/issues"
  },
  "homepage": "https://github.com/g-abate/rate-compare#readme"
}